@model FinalProj.Models.Advert
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="createadv">
    <div class="container">
        <div style="padding:50px 0px;" class="col-md-12 col-lg-6 m-auto ">
            <form method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Price)
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(m => m.Price, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.BedRoom)
                    @Html.TextBoxFor(m => m.BedRoom, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(m => m.BedRoom, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.BathRoom)
                    @Html.TextBoxFor(m => m.BathRoom, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(m => m.BathRoom, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RoomCount)
                    @Html.TextBoxFor(m => m.RoomCount, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(m => m.RoomCount, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RoomArea)
                    @Html.TextBoxFor(m => m.RoomArea, new { @class = "form-control", type = "number" })
                    @Html.ValidationMessageFor(m => m.RoomArea, null, new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Photo)
                    @Html.TextBoxFor(m => m.Photo, new { @class = "form-control", type = "file", accept = "image/*" })
                    @Html.ValidationMessageFor(m => m.Photo, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CityId)
                    @Html.DropDownListFor(m => m.CityId, new SelectList(ViewBag.Cities, "Id", "CityName"), "Şəhəri Seçin", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CityId, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Address)
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Address, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RentTypeId)
                    @Html.DropDownListFor(m => m.RentTypeId, new SelectList(ViewBag.RentType, "Id", "SaleType"), "Satış Növünü Seçin", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.RentTypeId, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.IsVip)
                    @Html.CheckBoxFor(m => m.IsVip, new { style = "width:20px;height:20px;" })
                    @Html.ValidationMessageFor(m => m.IsVip, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.IsNew)
                    @Html.CheckBoxFor(m => m.IsNew, new { style = "width:20px;height:20px;" })
                    @Html.ValidationMessageFor(m => m.IsNew, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Description)
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "5" })
                    @Html.ValidationMessageFor(m => m.Description, null, new { @class = "text-danger" })
                </div>

                <input type="submit" class="btn btn-success" name="submitcreate" />
            </form>

        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
